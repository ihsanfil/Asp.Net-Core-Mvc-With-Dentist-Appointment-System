@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h1 class="text-center">Randevu Bilgi Sistemine Kayıt Ol</h1>

<div class="row justify-content-center">
 
    <div class="col-md-4">
        <form asp-action="Register" asp-controller="Account">
            <div class="form-group">
                <label asp-for="UserName"></label>
                <span asp-validation-for="UserName" class="text-danger"></span>
                <input asp-for="UserName" class="form-control">

            </div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
                <input asp-for="Name" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="SurName"></label>
                <span asp-validation-for="SurName" class="text-danger"></span>
                <input asp-for="SurName" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
                <input asp-for="Email" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Color"></label>
                <span asp-validation-for="Color" class="text-danger"></span>
                <input asp-for="Color" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
                <input asp-for="Password" class="form-control">
            </div>
            <div class="form-group form-check">
                <input asp-for="IsDentist" type="checkbox" class="form-check-input">
                <label class="form-check-label" asp-for="IsDentist"></label>
            </div>
            <button type="submit" class="btn btn-primary">Kayıt Ol</button>
        </form>
    </div>
    
</div>

