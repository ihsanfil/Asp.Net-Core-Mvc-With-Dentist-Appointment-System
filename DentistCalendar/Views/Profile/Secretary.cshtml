@model SecretaryViewModel
@{
    ViewData["Title"] = "Secretary";
}
@section Styles{
    <link href='/lib/fullcalendar/core/main.css' rel='stylesheet' />
    <link href='/lib/fullcalendar/daygrid/main.css' rel='stylesheet' />
    <link href="~/lib/fullcalendar/timegrid/main.min.css" rel="stylesheet" />
    <link href="/lib/fullcalendar/bootstrap/main.css" rel="stylesheet" />
    <link href="/lib/fullcalendar/list/main.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
}

<div class="row">
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Diş Hastanesi</h5>
                <h6 class="card-subtitle mb-2 text-muted">@Model.User.Name @Model.User.SurName</h6>
                <p class="card-text">Diş Hastanesini Randevu Sistemine Hoş Geldiniz</p>
                <a href="/Account/Logout" class="card-link">Çıkış Yap</a>
            </div>
        </div>
        <br />
        <ul class="list-group">
            <li class="list-group-item">Dt.Okan Sevgi <button class="btn btn-sm pull-right mt-2" style="background-color: red"></button></li>
            <li class="list-group-item">Dt.Serdar Sevinti <button class="btn btn-sm mt-2 pull-right" style="background-color: red"></button></li>
        </ul>
    </div>
    <div class="col-md-9">
        <div  class="card">
            <div class="card-body">
                <div id="calendar"></div>
            </div>
        </div>
    </div>
</div>



@section Scripts{
    <script src="~/lib/fullcalendar/core/main.js"></script>
    <script src='/lib/fullcalendar/daygrid/main.js'></script>
    <script src="~/lib/fullcalendar/timegrid/main.js"></script>
    <script src="~/lib/fullcalendar/list/main.js"></script>
    <script src="~/lib/fullcalendar/interaction/main.js"></script>
    <script src="~/lib/fullcalendar/bootstrap/main.js"></script>
    <script src="/lib/fullcalendar/core/locales/tr.js"></script> <!--TÜRKÇE DİL PAKETİ-->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var calendarEl = document.getElementById('calendar');

            var calendar = new FullCalendar.Calendar(calendarEl, {
                plugins: ['interaction', 'dayGrid', 'timeGrid', 'list', 'bootstrap'],
                themeSystem: 'bootstrap',
                bootstrapFontAwesome: {
                    dayGridMonth: 'calendar', // dayGridMonth isim değilde takvim iconu olarak görünecek fontawesome class'ı yazdık buraya
                    prev: 'fa-chevron-circle-left',
                    next: 'fa-chevron-circle-right',
                    listWeek: 'fa-list'
                },
                locale: 'tr', //TÜRKÇE DİL DESTEĞİ
                header: {
                    left: 'prev, next, today, addEvent',
                    center: 'title', 
                    right: 'dayGridMonth, timeGridWeek, timeGridDay, timeGridForFourDay, listWeek'         
                },
                footer: {
                    left: 'prevYear', 
                    right: 'nextYear' 
                },

                /******== SAAT AYARLARI ==********/
                slotLabelFormat: { 
                    hour: '2-digit',
                    minute: '2-digit'
                  
                },
                fixedWeekCount: true, 
                showNonCurrentDates: false, 

                /******== TARAYICIYA BOYUTLANDIRMA AYARLARI ==********/           
                contentHeight: 650,              
                defaultView: 'dayGridMonth', 
                weekends: true, 
                allDaySlot: false,            
                titleFormat: {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'

                },
                titleRangeSeparator: ' / ', 
                columnHeaderFormat: { 
                    weekday: 'long'
                },
                views: {
                    timeGridForFourDay: { 
                        type: 'timeGrid',                 
                        duration: { days: 4 }, 
                        buttonText: '4 Gün'
                    }
                },
                customButtons: {
                    addEvent: {
                        text: 'Ekle',
                        click: function () {
                            calendar.addEvent(newEvent);
                        }
                    }
                },
                eventTimeFormat: { //event lerin üzerinde yazan başlangıç ve bitiş zamanlarını ayarlama
                    hour: '2-digit',
                    minute: '2-digit',                  
                },
                timeZone: 'UTC', //Default olarak local olarak gelir kullanıcının sistem saatini gösterir UTC yaparsak evrensel saat dilimini kullanır
                events: [
                    {
                        id: 'x',
                        title: 'Merhaba X',
                        start: '2021-02-14T08:00:00.000Z',
                        end: '2021-02-14T08:30:00.000Z'
                    },
                    {
                        id: 'y',
                        title: 'A Merhaba Y',
                        start: '2021-02-14T15:00:00.000Z',
                        end: '2021-02-14T15:30:00.000Z'
                    },

                ],
                eventRender: function (info) {
                    console.log(info.event.title);
                },
                selectable: true, 
                select: function (selectionInfo) {

                },
                eventClick: function (info) { 
                    alert(info.event.title);
                },

                editable: true,
            });

            calendar.render();
           
        })
    </script>
}